@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
@model DashboardViewModel

<div class="card shadow p-4">
    <h3 class="mb-3">Total Balance</h3>
    <h1>@Model.TotalBalance €</h1>
</div>

<hr />

<h4>Accounts</h4>

<div class="row">
@foreach (var acc in Model.Accounts)
{
    <div class="col-md-4">
    <div class="card shadow-sm p-3 mb-3">
    @{
            var diff = acc.CurrentBalance - acc.InitialBalance;
            var diffClass = diff >= 0 ? "text-success" : "text-danger";
            var sign = diff >= 0 ? "+" : "";
        }
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">@acc.Name</h5>
            <span class="fw-bold @diffClass fs-4">@sign@diff €</span>
        </div>

        <hr class="my-2">

        <div class="d-flex justify-content-between">
            <span class="text-muted">Balance</span>
            <span class="fw-bold">@acc.CurrentBalance €</span>
        </div>

        <div class="d-flex justify-content-between">
            <span class="text-muted">Included</span>
            <span class="fw-bold">
                @(acc.IsIncludedInTotal ? "Yes" : "No")
            </span>
        </div>
        <div class="d-flex justify-content-between">
            <span class="text-muted">Included</span>
            <span class="fw-bold">
                @(acc.Type)
            </span>
        </div>

    </div>
    </div>
}
</div>

<hr />